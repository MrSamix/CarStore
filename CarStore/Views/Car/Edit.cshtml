@model DataAccess.Entities.Car

<h1>Edit Car</h1>

<form asp-action="Edit" method="post" class="row g-3">
    <div class="col-12">
        <label asp-for="Brand.Name" class="form-label">Brand</label>
        <input asp-for="Brand.Name" class="form-control" list="brandslist">
        <datalist id="brandslist">
            @foreach (var brand in ViewBag.Brands)
            {
                    <option value="@brand.Text">@brand.Text</option>
            }
        </datalist>
    </div>
    <div class="col-12">
        <label asp-for="Model" class="form-label">Model</label>
        <input asp-for="Model" type="text" class="form-control">
    </div>
    <div class="col-12">
        <label asp-for="ColorId" class="form-label">Color</label>
        <select asp-for="ColorId" asp-items="@ViewBag.Colors" class="form-select">
        </select>
    </div>
    <div class="col-12">
        <label asp-for="CarTypeId" class="form-label">Car Type</label>
        <select asp-for="CarTypeId" asp-items="@ViewBag.CarTypes" class="form-select">
        </select>
    </div>
    <div class="col-12">
        <label asp-for="Country.Name" class="form-label">Country</label>
        <input asp-for="Country.Name" class="form-control" list="countrieslist">
        <datalist id="countrieslist">
            @foreach (var country in ViewBag.Countries)
            {
                    <option value="@country.Text">@country.Text</option>
            }
        </datalist>
    </div>
    <div class="col-12">
        <label asp-for="Region.Name" class="form-label">Region</label>
        <input asp-for="Region.Name" class="form-control" list="regionslist">
        <datalist id="regionslist">
            @foreach (var region in ViewBag.Regions)
            {
                    <option value="@region.Text">@region.Text</option>
            }
        </datalist>
    </div>
    <div class="col-12">
        <label asp-for="FuelTypeId" class="form-label">Fuel Type</label>
        <select asp-for="FuelTypeId" asp-items="@ViewBag.FuelTypes" class="form-select">
        </select>
    </div>

    <div class="col-12">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control">
    </div>

    <div class="col-12">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" required></textarea>
    </div>

    <div class="col-12">
        <label asp-for="ImageUrl" class="form-label">Image URL</label>
        <input asp-for="ImageUrl" type="url" class="form-control">
    </div>


    <div class="d-flex gap-2">

    <div class="col-6">
        <button type="submit" class="btn btn-warning">Edit</button>
    </div>
    <div class="col-6">
        <a asp-action="Index" class="btn btn-primary">Back</a>
    </div>
    </div>
</form>