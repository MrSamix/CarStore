@using DataAccess.Entities 
@model List<Car>

<h1>Products List</h1>

@if (Model.Count > 0)
{
        @* <a asp-action="Create" class="btn btn-success">Create New Product</a> *@
        <p>Count of products : @Model.Count</p>
        <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var car in Model)
        {
                    <div class="col">
                        <div class="card">
                            <img class="image-card" src="@(car.ImageUrl ?? "https://img.freepik.com/premium-vector/no-photo-available-vector-icon-default-image-symbol-picture-coming-soon-web-site-mobile-app_87543-18055.jpg")" alt="Car Photo" />
                                <div class="card-body">
                                    <h5 class="card-title">@car.Brand.Name</h5>
                                    <p class="card-text">@car.Model 
                                        <span class="badge bg-primary">@car.Price$</span>
                                    </p>
                                    <a asp-action="Details" asp-route-id="@car.Id"><i class="bi bi-info-lg fs-5"></i></a>
                                    <a asp-action="Edit" asp-route-id="@car.Id"><i class="bi bi-pencil text-warning fs-5"></i></a>
                                    <a asp-action="Delete" asp-route-id="@car.Id"><i class="bi bi-trash text-danger fs-5"></i></a>
                                </div>
                        </div>
                    </div>
        }
        </div>
}
else
{
        <p>No products found.</p>
}